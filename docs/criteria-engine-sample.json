[
	{
		"id": "project-criteria",
		"name": "Project Criteria",
		"enabled": true,
		"stopOnMatch": true,
		"filter": {
			"type": "group",
			"operator": "all",
			"children": [
				{
					"type": "condition",
					"property": "frontmatter.type",
					"comparator": "equals",
					"value": "project",
					"caseSensitive": false
				},
				{
					"type": "condition",
					"property": "file.folder",
					"comparator": "contains",
					"value": "project",
					"caseSensitive": false,
					"negate": true
				}
			]
		},
		"actions": [
			{
				"type": "move",
				"targetFolder": "To Do/Project",
				"createFolderIfMissing": true
			},
			{
				"type": "rename",
				"prefix": "hello - "
			},
			{
				"type": "removeTag",
				"tag": "#task"
			}
		]
	}
]
